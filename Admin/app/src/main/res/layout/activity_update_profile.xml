<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:theme="@style/login_style"
    app:layout_anchorGravity="center"
    tools:context=".Profile.Update_Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/greenish"
            android:orientation="horizontal"
            android:padding="20dp">

            <TextView
                android:id="@+id/appname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/extra_bold_jost"
                android:gravity="center"
                android:text="Update Profile"
                android:textSize="40dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="First Authenticate Your Current Password to Change."
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/white_background"
            android:backgroundTint="@color/light_slate_grey"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_current_pass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/editttext_white"
                android:backgroundTint="@color/slate_grey"
                android:drawableStart="@drawable/key"
                android:drawablePadding="10dp"
                android:ems="10"
                android:fontFamily="@font/aleo"
                android:gravity="center_vertical"
                android:hint="Current Password"
                android:inputType="textPersonName"
                android:paddingStart="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/cream"
                android:textSize="15sp" />
        </LinearLayout>

        <Button
            android:id="@+id/authenticate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_bg"
            android:fontFamily="sans-serif-black"
            android:text="Authenticate"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/white_background"
            android:backgroundTint="@color/light_slate_grey"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_new_pass"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/editttext_white"
                android:backgroundTint="@color/slate_grey"
                android:drawableStart="@drawable/key"
                android:drawablePadding="10dp"
                android:ems="10"
                android:fontFamily="@font/aleo"
                android:gravity="center_vertical"
                android:hint="New Password"
                android:inputType="textPersonName"
                android:paddingStart="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/cream"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_confirm_new_pass"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/editttext_white"
                android:backgroundTint="@color/slate_grey"
                android:drawableStart="@drawable/key"
                android:drawablePadding="10dp"
                android:ems="10"
                android:fontFamily="@font/aleo"
                android:gravity="center_vertical"
                android:hint="Confirm New Password"
                android:inputType="textPersonName"
                android:paddingStart="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/cream"
                android:textSize="15sp" />

        </LinearLayout>

        <Button
            android:id="@+id/pass_change_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_bg"
            android:fontFamily="sans-serif-black"
            android:text="Change"
            android:visibility="gone"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/white_background"
            android:backgroundTint="@color/light_slate_grey"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_profile_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/editttext_white"
                android:backgroundTint="@color/slate_grey"
                android:drawableStart="@drawable/user"
                android:drawablePadding="10dp"
                android:ems="10"
                android:fontFamily="@font/aleo"
                android:gravity="center_vertical"
                android:hint="Name"
                android:inputType="textPersonName"
                android:paddingStart="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/cream"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_phone_no"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/editttext_white"
                android:backgroundTint="@color/slate_grey"
                android:drawableStart="@drawable/phone"
                android:drawablePadding="10dp"
                android:ems="10"
                android:fontFamily="@font/aleo"
                android:gravity="center_vertical"
                android:hint="Phone No"
                android:inputType="phone"
                android:paddingStart="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/cream"
                android:textSize="15sp" />

        </LinearLayout>

        <Button
            android:id="@+id/profile_update_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_bg"
            android:fontFamily="sans-serif-black"
            android:text="Update"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>