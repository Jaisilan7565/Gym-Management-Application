<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:theme="@style/login_style"
    tools:context=".Trainer.Work_Hours.Work_Hours">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_margin="40dp"
        app:cardBackgroundColor="@color/yellow"
        app:cardCornerRadius="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/righteous"
            android:gravity="center"
            android:textColor="@color/deep_purple"
            android:textSize="24sp" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/grey_blue">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="7dp"
                android:background="@drawable/pink_button"
                android:backgroundTint="@color/light_green"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:text="Day"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="7dp"
                android:background="@drawable/pink_button"
                android:backgroundTint="@color/light_deer"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:text="Monday"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="7dp"
                android:background="@drawable/pink_button"
                android:backgroundTint="@color/light_deer"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:text="Tuesday"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="7dp"
                android:background="@drawable/pink_button"
                android:backgroundTint="@color/light_deer"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:text="Wednesday"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="7dp"
                android:background="@drawable/pink_button"
                android:backgroundTint="@color/light_deer"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:text="Thursday"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="7dp"
                android:background="@drawable/pink_button"
                android:backgroundTint="@color/light_deer"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:text="Friday"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="7dp"
                android:background="@drawable/pink_button"
                android:backgroundTint="@color/light_deer"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:text="Saturday"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/slate_grey">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="7dp"
                android:background="@drawable/pink_button"
                android:backgroundTint="@color/light_green"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:text="Start"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/mon_s"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="7dp"
                android:background="@drawable/pink_button"
                android:backgroundTint="@color/light_deer"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tue_s"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="7dp"
                android:background="@drawable/pink_button"
                android:backgroundTint="@color/light_deer"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/wed_s"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="7dp"
                android:background="@drawable/pink_button"
                android:backgroundTint="@color/light_deer"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/thur_s"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="7dp"
                android:background="@drawable/pink_button"
                android:backgroundTint="@color/light_deer"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/fri_s"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="7dp"
                android:background="@drawable/pink_button"
                android:backgroundTint="@color/light_deer"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/sat_s"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="7dp"
                android:background="@drawable/pink_button"
                android:backgroundTint="@color/light_deer"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/grey_blue">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="7dp"
                android:background="@drawable/pink_button"
                android:backgroundTint="@color/light_green"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:text="End"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/mon_e"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="7dp"
                android:background="@drawable/pink_button"
                android:backgroundTint="@color/light_deer"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tue_e"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="7dp"
                android:background="@drawable/pink_button"
                android:backgroundTint="@color/light_deer"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/wed_e"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="7dp"
                android:background="@drawable/pink_button"
                android:backgroundTint="@color/light_deer"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/thur_e"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="7dp"
                android:background="@drawable/pink_button"
                android:backgroundTint="@color/light_deer"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/fri_e"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="7dp"
                android:background="@drawable/pink_button"
                android:backgroundTint="@color/light_deer"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/sat_e"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="7dp"
                android:background="@drawable/pink_button"
                android:backgroundTint="@color/light_deer"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_bar1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/nav_bar_bg"
        android:elevation="6dp"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/bottom_nav_menu" />


</androidx.constraintlayout.widget.ConstraintLayout>