<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_blue">

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/pink_button"
        android:backgroundTint="@color/cream"
        android:fontFamily="@font/righteous"
        android:gravity="center"
        android:hint="Title"
        android:textColor="@color/black"
        android:textColorHint="@color/moss_green"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="150dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/pink_button"
            android:backgroundTint="@color/greenish">

            <EditText
                android:id="@+id/no_sets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:inputType="phone"
                android:textColor="@color/black"
                android:textSize="26sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:text=" Sets"
                android:textColor="@color/black"
                android:textSize="26sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="150dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/pink_button"
            android:backgroundTint="@color/greenish">

            <EditText
                android:id="@+id/no_reps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:inputType="phone"
                android:textColor="@color/black"
                android:textSize="26sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:text=" Reps"
                android:textColor="@color/black"
                android:textSize="26sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/workout_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/pink_button"
                android:backgroundTint="@color/cream"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:hint="Workout 1"
                android:textColorHint="@color/moss_green"/>

            <EditText
                android:id="@+id/workout_2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/pink_button"
                android:backgroundTint="@color/cream"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:hint="Workout 2"
                android:textColorHint="@color/moss_green" />

            <EditText
                android:id="@+id/workout_3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/pink_button"
                android:backgroundTint="@color/cream"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:hint="Workout 3"
                android:textColorHint="@color/moss_green" />

            <EditText
                android:id="@+id/workout_4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/pink_button"
                android:backgroundTint="@color/cream"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:hint="Workout 4"
                android:textColorHint="@color/moss_green" />

            <EditText
                android:id="@+id/workout_5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/pink_button"
                android:backgroundTint="@color/cream"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:hint="Workout 5"
                android:textColorHint="@color/moss_green" />

            <EditText
                android:id="@+id/workout_6"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/pink_button"
                android:backgroundTint="@color/cream"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:hint="Workout 6"
                android:textColorHint="@color/moss_green" />

            <Button
                android:id="@+id/set"
                style="@android:style/Widget.Button"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/button_bg"
                android:text="Set"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>