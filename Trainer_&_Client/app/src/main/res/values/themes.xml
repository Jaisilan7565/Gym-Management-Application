<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GymCog" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="login_style" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorHighlight">@color/light_red</item>
        <item name="colorSecondary">@color/black</item>
    </style>

    <style name="NoActionBar" parent="Theme.Design.NoActionBar">
        <item name="android:statusBarColor" >@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="dialogue" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_dialogue</item>
        <item name="windowMinWidthMinor">85%</item>
        <item name="android:windowAnimationStyle">@style/anim1</item>
    </style>

    <style name="anim1">
        <item name="android:windowEnterAnimation">@anim/slide_scale_in</item>
        <item name="android:windowExitAnimation">@anim/slide_scale_out</item>
    </style>

    <style name="Dashboard" parent="Theme.Design.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/moss_green</item>
    <item name="colorPrimaryVariant">@color/forest_green</item>
    <item name="colorOnPrimary">@color/light_white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/peach</item>
    <item name="colorSecondaryVariant">@color/cream</item>
    <item name="colorOnSecondary">@color/peach</item>

    <item name="android:textColor">@color/black</item>
    </style>

</resources>